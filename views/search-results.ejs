<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Results</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f0f2f5;
            margin: 0;
            padding: 0;
            color: #333;
        }
        .container {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 1.5rem;
            background: #ffffff;
            border-radius: 12px;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }
        h1 {
            font-size: 2.5rem;
            color: #444;
            margin: 0;
            padding-bottom: 1rem;
            border-bottom: 2px solid #007bff;
            text-align: center;
        }
        ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }
        li {
            display: flex;
            align-items: center;
            padding: 1rem;
            margin-bottom: 1rem;
            border-radius: 8px;
            background: #ffffff;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
            transition: background 0.3s, box-shadow 0.3s;
            position: relative;
        }
        li:hover {
            background: #f8f9fa;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }
        .user-info {
            flex: 1;
            display: flex;
            align-items: center;
        }
        .user-info img {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            margin-right: 1rem;
        }
        .user-info a {
            text-decoration: none;
            color: #007bff;
            font-weight: 600;
            font-size: 1.2rem;
            transition: color 0.3s;
        }
        .user-info a:hover {
            color: #0056b3;
        }
        .btn-container {
            display: flex;
            align-items: center;
        }
        .btn-container button {
            padding: 0.5rem 1rem;
            font-size: 1rem;
            color: #ffffff;
            background: #007bff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background 0.3s, transform 0.2s;
        }
        .btn-container button:hover {
            background: #0056b3;
        }
        .btn-container button:active {
            transform: scale(0.98);
        }
        .back-link {
            display: block;
            text-align: center;
            margin-top: 2rem;
            font-size: 1rem;
        }
        .back-link a {
            text-decoration: none;
            color: #007bff;
            font-weight: 500;
            transition: color 0.3s;
        }
        .back-link a:hover {
            color: #0056b3;
        }

        @media (max-width: 768px) {
            .container {
                padding: 1rem;
            }
            li {
                flex-direction: column;
                align-items: flex-start;
                text-align: left;
            }
            .user-info img {
                width: 40px;
                height: 40px;
                margin-bottom: 0.5rem;
            }
            .btn-container button {
                width: 100%;
                margin-top: 0.5rem;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Search Results</h1>
        <ul>
            <% users.forEach(user => { %>
                <li>
                    <div class="user-info">
                        <img src="<%= user.profilePicture %>" alt="<%= user.name %>">
                        <a href="/profile/<%= user.id %>"><%= user.name %></a>
                    </div>
                    <div class="btn-container">
                        <form action="/send-friend-request" method="post" style="display:inline;">
                            <input type="hidden" name="receiverId" value="<%= user.id %>">
                            <button type="submit">Send Friend Request</button>
                        </form>
                    </div>
                </li>
            <% }) %>
        </ul>
        <div class="back-link">
            <a href="/dashboard">Back to Dashboard</a>
        </div>
    </div>
</body>
</html>
